@model DataModel.User

@{
    ViewData["Title"] =  Model !=null ? "Edit" : "Create";
}



<div class="row">
    <div class="col-md-4">
        <form asp-action="@ViewData["Title"]">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="State.Name" class="control-label"></label>
                <select asp-for="State.Id" asp-items="@(new SelectList(ViewBag.States,"Id","Name"))" class="form-control">
                    <option>--Select State--</option>
                </select>
                <span asp-validation-for="State.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
